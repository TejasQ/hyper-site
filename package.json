{
  "name": "hyper-site",
  "private": true,
  "version": "1.3.0",
  "description": "The official website for the Hyper terminal",
  "repository": "zeit/hyper-site",
  "license": "MIT",
  "scripts": {
    "dev:next": "micro server.js",
    "dev:api": "export API_URL=http://localhost:3001 && nodemon api/blog-posts/index.js",
    "dev": "run-p dev:*",
    "build": "next build",
    "now-build": "next build",
    "start": "NODE_ENV=production micro server.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@mdx-js/mdx": "^0.16.6",
    "@zeit/next-mdx": "^1.2.0",
    "babel-plugin-inline-react-svg": "^1.0.1",
    "escape-html": "^1.0.3",
    "isomorphic-unfetch": "^3.0.0",
    "lodash.debounce": "^4.0.8",
    "lscache": "^1.3.0",
    "micro": "^9.3.3",
    "mitt": "^1.1.3",
    "next": "^8.0.0-canary.2",
    "nprogress": "^0.2.0",
    "path-match": "^1.2.4",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-gravatar": "^2.6.3",
    "react-highlighter": "^0.4.3",
    "react-tweet-embed": "^1.1.1"
  },
  "devDependencies": {
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.3"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  }
}
